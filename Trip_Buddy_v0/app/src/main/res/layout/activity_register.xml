<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LoginBackground"
    tools:context="com.example.fiveguys.trip_buddy_v0.Register">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:gravity="center"
            android:id="@+id/txtUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="UserName"
            android:paddingTop="20dp"
            android:paddingBottom="7dp"
            android:textColor="@color/WordLight"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtUser"
            android:gravity="center"
            style="@style/edtTextStyle"
            android:layout_width="250dp"
            android:layout_height="40dp" />

        <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Email"
                android:padding="7dp"
                android:textColor="@color/WordLight"
                android:textStyle="bold" />
            <EditText
                style="@style/edtTextStyle"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_width="250dp"
                android:id="@+id/edtEmail"
                />

        <TextView
            android:id="@+id/txtPassword1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="Password"
            android:padding="7dp"
            android:textColor="@color/WordLight"
            android:textStyle="bold" />

        <EditText
                style="@style/edtTextStyle"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_width="250dp"
                android:inputType="textPassword"
                android:id="@+id/edtPassword"
                />

            <TextView
                android:id="@+id/txtPassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:padding="7dp"
                android:text="Confirm Password"
                android:textColor="@color/WordLight"
                android:textStyle="bold" />
            <EditText
                style="@style/edtTextStyle"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_width="250dp"
                android:inputType="textPassword"
                android:id="@+id/edtPassword2"
                />


        <Button
                android:id="@+id/btnConfirm"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@color/WordDark"
                android:onClick="onClickConfirm"
                android:text="Confirm"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

        <Button
                android:id="@+id/btnCancel"
                android:layout_width="150dp"
                android:layout_marginTop="7dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:background="@color/WordLight"
                android:onClick="onClickCancel"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                 />


    </LinearLayout>

</RelativeLayout>
