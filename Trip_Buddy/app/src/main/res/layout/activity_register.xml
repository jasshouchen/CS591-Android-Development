<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LoginBackground"
    tools:context="com.example.caozhongli.tripbuddy.Register">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="45sp"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="354dp"
            android:layout_weight="1.81">

            <TextView
                android:id="@+id/txtUser"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="UserName"
                android:textColor="@color/WordDark"
                android:textStyle="bold" />
            <EditText
                android:layout_row="0"
                android:layout_column="1"
                android:layout_height="50dp"
                android:layout_width="370dp"
                android:id="@+id/edtUser"
                />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Email"
                android:textColor="@color/WordDark"
                android:textStyle="bold" />
            <EditText
                android:layout_row="1"
                android:layout_column="1"
                android:layout_height="50dp"
                android:layout_width="370dp"
                android:id="@+id/edtEmail"
                />

            <TextView
                android:id="@+id/txtPassword1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Password"
                android:textColor="@color/WordDark"
                android:textStyle="bold" />
            <EditText
                android:layout_row="2"
                android:layout_column="1"
                android:layout_height="50dp"
                android:layout_width="370dp"
                android:inputType="textPassword"
                android:id="@+id/edtPassword"
                />

            <TextView
                android:id="@+id/txtPassword2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Confirm Password"
                android:textColor="@color/WordDark"
                android:textStyle="bold" />
            <EditText
                android:layout_row="3"
                android:layout_column="1"
                android:layout_height="50dp"
                android:layout_width="370dp"
                android:inputType="textPassword"
                android:id="@+id/edtPassword2"
                />
        </GridLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/WordDark"
                android:onClick="onClickConfirm"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/WordLight"
                android:onClick="onClickCancel"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
